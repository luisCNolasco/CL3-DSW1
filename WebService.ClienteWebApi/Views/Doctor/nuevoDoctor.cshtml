@model WebService.Data.Model.DOCTOR

@{
    ViewBag.Title = "nuevoDoctor";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

      <div class="container">
          <h2>Registrar Doctor</h2>

          @using (Html.BeginForm())
          {
              @Html.AntiForgeryToken()

              <div class="form-horizontal">

                  <hr />
                  @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                  <div class="form-group">
                      @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.EditorFor(model => model.NOM_DOC, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.NOM_DOC, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.Label("Apellido", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.EditorFor(model => model.APE_DOC, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.APE_DOC, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.Label("Especialidad", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.DropDownListFor(model => model.IDE_ESP, ViewBag.especialidad as SelectList,
                           "Seleccione Especialidad", new { @class = "form-control" })
                          @Html.ValidationMessageFor(model => model.IDE_ESP, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.Label("Teléfono", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.EditorFor(model => model.TEL_DOC, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.TEL_DOC, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.Label("Correo", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.EditorFor(model => model.COR_DOC, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.COR_DOC, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.Label("Distrito", htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                          @Html.DropDownListFor(model => model.IDE_DIS, ViewBag.distrito as SelectList,
                          "Seleccione Distrito", new { @class = "form-control" })

                          @Html.ValidationMessageFor(model => model.IDE_DIS, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="col-md-offset-2 col-md-10">
                          <input type="submit" value="Create" class="btn btn-success" />
                      </div>
                  </div>
              </div>
          }

          <br />  <br />
      </div>

<script>
            if ('@ViewBag.mensaje' != "") {

                swal('@ViewBag.mensaje');

            }
</script>


